<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="@mipmap/bg_my">

        <!--图标-->
        <ImageView
            android:id="@+id/iv_my_pic"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:background="@mipmap/ic_shop_creat"
            app:layout_auto_basewidth="height" />

        <!--名称-->
        <TextView
            android:id="@+id/tv_my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:layout_marginRight="50px"
            android:layout_toLeftOf="@+id/iv_my_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="36px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="220px"
        android:background="@drawable/bg_radius10_white"
        android:paddingBottom="30px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="30px">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_pofit"
            android:textColor="@color/black6"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_my_pofit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_01"
            android:layout_marginTop="10px"
            android:text="@string/app_default_money"
            android:textColor="@color/black3"
            android:textSize="72px" />

        <Button
            android:id="@+id/btn_my_put_forwary"
            style="@style/btn_style01"
            android:layout_width="188px"
            android:layout_height="64px"
            android:layout_below="@+id/tv_my_pofit"
            android:text="@string/my_put_forward" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60px"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_01"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/bg_radius10_white">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>