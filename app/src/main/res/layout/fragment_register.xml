<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_register_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_register_account"
            style="@style/text_b3_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:text="@string/register_account" />

        <EditText
            android:id="@+id/et_register_account"
            style="@style/input_30_left"
            android:layout_height="100px"
            android:layout_below="@+id/tv_register_account"
            android:hint="@string/register_account_hint"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="@color/grayc" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_register_account"
            android:background="@color/black9" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_register_account"
        android:paddingLeft="60px"
        android:paddingRight="60px" />

    <Button
        android:id="@+id/btn_register_next"
        style="@style/btn_style01"
        android:layout_below="@+id/fl_register"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="134px"
        android:text="@string/next" />

</RelativeLayout>