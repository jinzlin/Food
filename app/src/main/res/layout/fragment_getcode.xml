<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_getcode_phone"
        style="@style/text_b3_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:text="@string/phone" />

    <EditText
        android:id="@+id/et_getcode_phone"
        style="@style/input_30_left"
        android:layout_height="100px"
        android:layout_below="@+id/tv_getcode_phone"
        android:hint="@string/phone_hint"
        android:inputType="number"
        android:maxLength="11"
        android:textColorHint="@color/grayc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_getcode_phone"
        android:background="@color/black9" />


    <TextView
        android:id="@+id/tv_getcode_code"
        style="@style/text_b3_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_getcode_phone"
        android:layout_marginTop="56px"
        android:text="@string/code" />

    <!--密码-->
    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/tv_getcode_code">


        <EditText
            android:id="@+id/et_getcode_code"
            style="@style/input_30_left"
            android:layout_toLeftOf="@+id/rl_getcode_get_code"
            android:hint="@string/code_hint"
            android:inputType="number"
            android:textColorHint="@color/grayc" />

        <RelativeLayout
            android:id="@+id/rl_getcode_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <View
                android:layout_width="1px"
                android:layout_height="16px"
                android:layout_centerVertical="true"
                android:background="@color/grayc" />

            <TextView
                android:id="@+id/tv_getcode_getcode"
                android:layout_width="178px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="@string/get_code"
                android:textColor="@color/colorMain"
                android:textSize="30px" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_01"
        android:background="@color/black9" />

</RelativeLayout>